<%= javascript_include_tag "ckeditor/init" %>
<script>
    <% if flash[:error_msg]%>
    alert('<%=flash[:error_msg]%>');
    <% end%>
</script>
<div>
  <ul class="breadcrumb">
    <li>
      <a href="#">Home</a> <span class="divider">/</span>
    </li>
    <li>
      <a href="<%= admin_job_index_path %>">招聘管理</a> <span class="divider">/</span>
    </li>
    <li>
      信息修改
    </li>
  </ul>
</div>
<div class="row-fluid sortable ui-sortable">
  <div class="box span12">
    <div class="box-header well" data-original-title="">
      <h2><i class="icon-edit"></i> 信息修改</h2>
    </div>
    <div class="box-content">
      <%= form_for @job, :url => admin_job_path, :method => "put", :html => {:id => "verifytitle", :class => "form-horizontal"} do |f| %>
          <legend>信息修改</legend>
          <%= f.label "招聘职位：" %>
          <%= f.text_field :title %>
          <%= f.label "任职资格：" %>
          <%= f.cktext_area :description %>
          <div class="form-actions">
            <button type="submit" class="btn btn-primary">完成提交</button>
          </div>
      <% end %>
    </div>
  </div>
  <!--/span-->
</div>
<script>
    $().ready(function () {
        $("#verifytitle").validate({
            rules: {
                "job[title]": {
                    required: true
                },
                "job[description]": {
                    required: true
                }
            },
            messages: {
                "job[title]": {
                    required: "招聘职位不能为空"
                },
                "job[description]": {
                    required: "任职资格不能为空"
                }
            }
        });
    });
    $(document).ready(function () {
        $('form[data-remote]').bind('ajax:before', function () {
            for (instance in CKEDITOR.instances) {
                CKEDITOR.instances[instance].updateElement();
            }
        });
    });
</script>