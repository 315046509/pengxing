<script>
    <% if !flash[:error_msg].nil? && !flash[:error_msg].blank?%>
    alert('<%=flash[:error_msg]%>');
    <% end%>
</script>
<div>
  <ul class="breadcrumb">
    <li>
      <a href="<%= admin_home_index_path %>">Home</a> <span class="divider">/</span>
    </li>
    <li>
      <a href="<%= admin_classic_cases_path %>">经典案例</a> <span class="divider">/</span>
    </li>
    <li>
      添加案例
    </li>
  </ul>
</div>
<div class="row-fluid sortable">
  <div class="box span12">
    <div class="box-header well" data-original-title>
      <h2><i class="icon-list-alt"></i>添加案例</h2>
    </div>
    <div class="box-content">
      <div id="content" class="span10" style="padding: 20px">
        <%= form_for @roll, :url => admin_classic_cases_path(@roll), :method => :post, :html => {:id => "roll"} do |f| %>
            <% if @roll.errors.any? %>
                <div id="error_explanation" style="color: red">
                  <p>错误:</p>
                  <ul>
                    <% @roll.errors.full_messages.each do |msg| %>
                        <li><%= msg %></li>
                    <% end %>
                  </ul>
                </div>
            <% end %>
            <div class="codeExplanation">
              <p>
                注：案例标题必须小于12个字
              </p>
            </div>
            <div class="field">
              <span>案例标题：</span>
              <%= f.text_field :title %>
            </div>
            <br/>

            <div class="field">
              <span>选择图片：</span>
              <%= f.file_field :avatar %>
            </div>
            <br/>

            <div class="field">
              <span>案例详细：</span>
              <%= f.text_field :description %>
            </div>
            </br>
            <div class="form-actions">
              <button type="submit" class="btn btn-primary">完成提交</button>
            </div>
        <% end %>
        <!--/span-->
      </div>
    </div>
  </div>
</div><!--/row-->
<script>
    $().ready(function () {
        $("#roll").validate({
            rules: {
                "case[title]": {
                    required: true
                },
                "case[avatar]": {
                    required: true,
                    accept: "jpg|png"
                },
                "case[description]": {
                    required: true
                }
            },
            messages: {
                "case[title]": {
                    required: "请填写案例标题"
                },
                "case[avatar]": {
                    required: "请上传图片",
                    accept: "图片类型必须是png或jpg"
                },
                "case[description]": {
                    required: "请填写案例详细"
                }
            }
        });
    });
</script>


