<script>
    <% if !flash[:error_msg].nil? && !flash[:error_msg].blank?%>
    alert('<%=flash[:error_msg]%>');
    <% end%>
</script>
<div>
  <ul class="breadcrumb">
    <li>
      <a href="<%= admin_home_index_path %>">Home</a> <span class="divider">/</span>
    </li>
    <li>
      <a href="<%= admin_customers_path %>">合作伙伴</a> <span class="divider">/</span>
    </li>
    <li>
      修改合作伙伴
    </li>
  </ul>
</div>
<div class="row-fluid sortable ui-sortable">
  <div class="box span12">
    <div class="box-content">
      <%= form_for @customer, :url => admin_customer_path, :method => "put", :html => {:id => "verifytitle", :class => "form-horizontal"} do |f| %>
          <legend>修改合作伙伴</legend>
          <%= f.label "企业名称：" %>
          <%= f.text_field :title %>
          <%= f.label "企业详细：" %>
          <%= f.cktext_area :description, :style => "width:500px;height:150px" %>
          <div class="form-actions">
            <button type="submit" class="btn btn-primary">完成提交</button>
          </div>
      <% end %>
    </div>
  </div>
  <!--/span-->
</div>
<script src="/admin/js/jquery.validate.js"></script>
<script>
    $().ready(function () {
        $("#verifytitle").validate({
            rules: {
                "customer[title]": {
                    required: true
                },
                "customer[description]": {
                    required: true
                }
            },
            messages: {
                "customer[title]": {
                    required: "请上填写企业名称"
                },
                "customer[description]": {
                    required: "请填写企业详细"
                }
            }
        });
    });
</script>