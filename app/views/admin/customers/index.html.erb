<div>
  <ul class="breadcrumb">
    <li>
      <a href="<%= admin_home_index_path %>">Home</a> <span class="divider">/</span>
    </li>
    <li>
      <a href="<%= admin_customers_path %>">合作伙伴</a> <span class="divider">/</span>
    </li>
    <li>
      合作伙伴列表
    </li>
  </ul>
</div>
<div class="row-fluid sortable">
  <div class="box span12">
    <div class="box-header well" data-original-title>
      <h2><i class="icon-list-alt"></i> 合作伙伴列表</h2>
    </div>
    <div class="box-content">
      <table class="table table-striped table-bordered bootstrap-datatable datatable">
        <thead>
        <tr>
          <th>ID</th>
          <th>企业名称</th>
          <th>小伙伴logo</th>
          <th>企业详细</th>
          <th>创建时间</th>
          <th>查看</th>
          <th>删除</th>
        </tr>
        </thead>
        <tbody>
        <div class="form-actions">
          <a class="btn btn-primary" href="<%= new_admin_customer_path %>">
            添加企业
          </a>
        </div>
        <% @customers.each do |roll| %>
            <tr>
              <td><%= roll.id %></td>
              <td><%= roll.title %></td>
              <td><%= image_tag roll.avatar.url(:thumb) %></td>
              <td><%= truncate_u(roll.description, 30) %></td>
              <td class="center"><%= my_datetime_format roll.created_at %></td>
              <td>
                <a class="btn btn-info" href="<%= admin_customer_path(roll) %>">
                  <i class="icon-edit icon-white"></i>
                  查看
                </a>
              </td>
              <td>
                <a class="btn btn-danger" data-confirm="您确定要删除吗?" data-method="delete" href="<%= admin_customer_path(roll.id) %>">
                  <i class="icon-trash icon-white"></i>
                  删除
                </a>
              </td>
            </tr>
        <% end %>
        </tbody>
      </table>
      <div class="pagination pagination-centered">
        <ul><%= paginate @customers %></ul>
      </div>
    </div>
  </div>
  <!--/span-->

</div><!--/row-->
