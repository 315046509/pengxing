<script>
    <% if !flash[:error_msg].nil? && !flash[:error_msg].blank?%>
    alert('<%=flash[:error_msg]%>');
    <% end%>
</script>
<div>
  <ul class="breadcrumb">
    <li>
      <a href="<%= admin_home_index_path %>">Home</a> <span class="divider">/</span>
    </li>
    <li>
      <a href="<%= admin_daozhas_path %>">道闸点位</a> <span class="divider">/</span>
    </li>
    <li>
      小区列表
    </li>
  </ul>
</div>
<div class="row-fluid sortable">
  <div class="box span12">
    <div class="box-header well" data-original-title>
      <h2><i class="icon-list-alt"></i> 小区列表</h2>
    </div>
    <div class="box-content">
      <table class="table table-striped table-bordered bootstrap-datatable datatable">
        <thead>
        <tr>
          <th>ID</th>
          <th>小区名称</th>
          <th>道闸区域</th>
          <th>道闸图片</th>
          <th>小区地址</th>
          <th>道闸数量</th>
          <th>出入情况</th>
          <th>媒体形式</th>
          <th>查看</th>
          <th>修改</th>
          <th>删除</th>
        </tr>
        </thead>
        <tbody>
        <div class="form-actions">
          <a class="btn btn-primary" href="<%= new_admin_daozha_path %>">
            添加道闸点位
          </a>
        </div>
        <% @roll.each do |roll| %>
            <tr>
              <td><%= roll.id %></td>
              <td><%= roll.name %></td>
              <td><%= roll.question_category_name %></td>
              <td><%= image_tag roll.avatar.url(:thumb) %></td>
              <td><%= truncate_u(roll.address, 4) %></td>
              <td><%= roll.number %></td>
              <td><%= truncate_u(roll.access_conditions, 4) %></td>
              <td><%= truncate_u(roll.media_form, 4) %></td>
              <td>
                <a class="btn btn-success" href="<%= admin_daozha_path(roll) %>">
                  <i class="icon-zoom-in icon-white"></i>
                  查看
                </a>
              </td>
              <td>
                <a class="btn btn-info" href="<%= edit_admin_daozha_path(roll) %>">
                  <i class="icon-edit icon-white"></i>
                  修改
                </a>
              </td>
              <td>
                <a class="btn btn-danger" data-confirm="您确定要删除吗?" data-method="delete" href="<%= admin_daozha_path(roll.id) %>">
                  <i class="icon-trash icon-white"></i>
                  删除
                </a>
              </td>
            </tr>
        <% end %>
        </tbody>
      </table>
      <div class="pagination pagination-centered">
        <ul><%= paginate @roll %></ul>
      </div>
    </div>
  </div>
  <!--/span-->

</div><!--/row-->
