<script>
    <% if !flash[:error_msg].nil? && !flash[:error_msg].blank?%>
    alert('<%=flash[:error_msg]%>');
    <% end%>
</script>
<div>
  <ul class="breadcrumb">
    <li>
      <a href="<%= admin_home_index_path %>">Home</a> <span class="divider">/</span>
    </li>
    <li>
      <a href="<%= admin_daozhas_path %>">道闸点位</a> <span class="divider">/</span>
    </li>
    <li>
      修改道闸点位
    </li>
  </ul>
</div>
<div class="row-fluid sortable ui-sortable">
  <div class="box span12">
    <div class="box-content">
      <div id="content" class="span10" style="padding: 20px">
        <%= form_for @case, :url => admin_daozha_path, :method => "put", :html => {:id => "classic_cases", :class => "form-horizontal"} do |f| %>
            <legend>修改道闸点位</legend>

            <%= f.label "小区名称：" %>
            <%= f.text_field :name %>

            <%= f.label "道闸区域：" %>
            <%= f.select :question_category_id, options_for_select(Daozha::QUESTION_CATEGORYS) %>
            <FONT color=#A52A2A size=2>注：请更改区域</FONT>

            <%= f.label "小区地址：" %>
            <%= f.text_field :address %>

            <%= f.label "道闸数量：" %>
            <%= f.text_field :number %>

            <%= f.label "出入情况：" %>
            <%= f.text_field :access_conditions %>

            <%= f.label "媒体形式：" %>
            <%= f.text_field :media_form %>


            <div class="form-actions">
              <button type="submit" class="btn btn-primary">提交修改</button>
            </div>
        <% end %>
      </div>
    </div>
  </div>
  <!--/span-->
</div>
<script src="/admin/js/jquery.validate.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $(function () {
            $("#classic_cases").validate({
                rules: {
                    "daozha[name]": {
                        required: true
                    },
                    "daozha[avatar]": {
                        required: true,
                        accept: "jpg|png"
                    },
                    "daozha[address]": {
                        required: true
                    },
                    "daozha[number]": {
                        required: true
                    },
                    "daozha[access_conditions]": {
                        required: true
                    },
                    "daozha[media_form]": {
                        required: true
                    }
                },
                messages: {
                    "daozha[name]": {
                        required: "请填写小区名称"
                    },
                    "daozha[avatar]": {
                        required: "请上传图片",
                        accept: "图片类型必须是png或jpg"
                    },
                    "daozha[address]": {
                        required: "请填写所在地址"
                    },
                    "daozha[number]": {
                        required: "请填写道闸数量"
                    },
                    "daozha[access_conditions]": {
                        required: "请填写出入情况"
                    },
                    "daozha[media_form]": {
                        required: "请填写媒体形式"
                    }
                },
                errorPlacement: function (error, element) {
                    error.appendTo(element.parent());
                }
            });
        });
    });
</script>