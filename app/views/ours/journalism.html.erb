<%= render "common/navigation" %>
<div id="layout_main" class="clearfix">
  <%= render "common/menuour" %>
  <!-- 新闻内容 -->
  <div id="layout_mainer">
    <div id="layout_content514">
      <p>
        <img src="../images/our/our_title.jpg" alt="关于我们"/></p>
      <ul id="news" class="clearfix">
        <!--最新动态:开始-->
        <% @journalisms.each do |q| %>
            <li>
              <span class="news_title">
                <%= link_to truncate_u(q.title, 25), journalism_show_our_path(q) %>
              </span>
              <span class="right"><%= my_datetime_format q.created_at %></span>
            </li>
        <% end %>
        <!--最新动态:结束-->
      </ul>
      <div class="newspage">
        <!--page:start-->
        <div class="pagination pagination-centered">
          <ul><%= paginate @journalisms %></ul>
        </div>
        <!--page:end-->
      </div>
      <p id="nextcolumn">
        <span class="btn160x34 font_14 b"><a href="<%= ours_path %>">&gt;&gt;关于我们</a></span>
      </p>
    </div>
  </div>
</div>
<!-- 新闻内容end -->
</div>
<%= render "common/footer" %>
<script type="text/javascript">
    document.getElementById("menu_our").className = "menu_our_onclick"
    document.getElementById("sidebar_menu05").className = "sidebar_menu_onclick"
    var a = document.getElementById("layout_mainer")
    var b = document.getElementById("sidebar")
    if (a.scrollHeight < b.scrollHeight) {
        a.style.height = b.scrollHeight + "px";
    }
    else {
        b.style.height = a.scrollHeight + "px";
    }
</script>