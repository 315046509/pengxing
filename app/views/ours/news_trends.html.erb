<%= render "common/navigation" %>
<div id="layout_main" class="clearfix">
  <%= render "common/menuour" %>
  <!-- 新闻内容 -->
  <div id="layout_mainer">
    <div id="layout_content514">
      <p>
        <img src="../images/our/our_title.jpg" alt="关于我们"/>
      </p>
      <!--            分类               -->
      <div class="sort">
        <div class="solid_line">
        </div>
        <h4 class="font_12 coffee">
          按类型分类
        </h4>
        <ul>
          <li>
            <a id="hl1_st1" class="red" href="http://www.ccpxcm.com/ours/journalism">不限 </a>|
          </li>
          <li>
            <a id="hl1_st2" href="http://www.ccpxcm.com/ours/news_trends">新闻动态 </a>|
          </li>
          <li>
            <a id="hl1_st3" href="http://www.ccpxcm.com/ours/dynamic_announcement">公告动态</a>
          </li>
        </ul>
        <div class="clear"></div>
        <div class="solid_line"></div>
      </div>
      <div class="clear">
      </div>
      <!--            end               -->
      <ul id="news" class="clearfix">
        <!--最新动态:开始-->
        <% @journalisms_1_journalism.each do |q| %>
            <li>
              <span class="news_title">
                <%= link_to truncate_u(q.title, 25), journalism_show_our_path(q) %>
              </span>
              <span class="right"><%= my_datetime_format q.created_at %></span>
            </li>
        <% end %>
        <!--最新动态:结束-->
      </ul>
      <div class="newspage">
        <!--page:start-->
        <div class="pagination pagination-centered">
          <ul><%= paginate @journalisms %></ul>
        </div>
        <!--page:end-->
      </div>
      <p id="nextcolumn">
        <span class="btn160x34 font_14 b"><a href="<%= ours_path %>">&gt;&gt;关于我们</a></span>
      </p>
    </div>
  </div>
</div>
<!-- 新闻内容end -->
</div>
